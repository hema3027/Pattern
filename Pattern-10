#python
n=int(input())
k=0
for i in range(1,n):
    for j in range(1,(n-i)+1):
        print(end=" ")
    while k!=((2*i)-1):
        print("*",end="")
        k+=1
    k=0
    print()
for i in range(n+1,1,-1):
    for j in range(-1,(n-i)):
        print(" ",end="")
    for k in range(i,(2*i)-1):
        print("*",end="")
    for k in range(1,(i-1)):
        print("*",end="")
    print()
    
